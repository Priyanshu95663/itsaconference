.grid_12#presentation
  .grid_2
    .spacer

  .grid_8#head.dashed_bottom_border
    %h1= @presentation.title
    %h2= @presentation.author
    %h3= @presentation.affiliation

    .spacer

    %h3
      - if @presentation.slides_url
        %a{:href=>@presentation.slides_url} (Slides)     
      - if @presentation.video != ""
        %a{:href=>@presentation.video} (Video)     

    .spacer

    %h4= @presentation.start_time.strftime('%I:%M %p, %A %B %d, %Y').gsub(/^0/,"")
      
  .clear 

.grid_12#body
  .grid_2
    .spacer

  .grid_8.dashed_bottom_border

    %p= @presentation.abstract
    .spacer.clear    
    %img{:src=>"#{@presentation.bio_photo}", :class=>"right bio_photo"}
    %p= @presentation.biography
    .spacer.clear
      
