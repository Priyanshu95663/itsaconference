  .spacer
  
  %h1= @title.gsub(/_/,' ').split.collect {|s| s.capitalize}.join(' ')


  - width = 854
  - height = 480
  - if @resolution == "360p" 
    - width = 640
    - height = 360
    
  = render :partial => "video", :locals => { :video =>"/source/#{@title}/#{@resolution}/#{@bit_rate}/#{code}", :image=>"/player/video_titleslide.png", :width=>width, :height=>height }

  %a{:href=>"/pv/#{@title}/720p/lbr/#{@code}"} [720p]
  %a{:href=>"/pv/#{@title}/720p/hbr/#{@code}"} [720p HQ]
  %a{:href=>"/pv/#{@title}/480p/lbr/#{@code}"} [480p]
  %a{:href=>"/pv/#{@title}/480p/hbr/#{@code}"} [480p HQ]
  %a{:href=>"/pv/#{@title}/360p/lbr/#{@code}"} [360p]
  %a{:href=>"/pv/#{@title}/360p/hbr/#{@code}"} [360p HQ]
    
  .clear.spacer

  