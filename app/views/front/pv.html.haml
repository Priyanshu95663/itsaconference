      %li
        %a{:href=>"/pv/jim_weirich_keynote/480p/hbr/#{@code}"} Jim Weirich Keynote
      %li
        %a{:href=>"/pv/ruby_conf_sessions/480p/hbr/#{@code}"} Ruby Conference Sessions and Panel Discussion
      %li
        %a{:href=>"/pv/rails_conf_sessions/480p/hbr/#{@code}"} Rails Conference Sessions and Panel Discussion
      %li
        %a{:href=>"/pv/nosql_conf_sessions/480p/hbr/#{@code}"} NoSQL Conference Sessions and Panel Discussion
      %li
        %a{:href=>"/pv/ruby_conf_sessions/480p/hbr/#{@code}"} Servers Conference Sessions and Panel Discussion
      %li
        %a{:href=>"/pv/dave_thomas_keynote/480p/hbr/#{@code}"} Dave Thomas Keynote

